# Polymarket Market Maker Configuration
# Rename this file to .env and fill in your values

# =============================================================================
# REQUIRED - Your Polygon wallet private key
# =============================================================================
PRIVATE_KEY=your_private_key_here_without_0x_prefix


# =============================================================================
# STRATEGY PARAMETERS (Fushimi et al. Model)
# =============================================================================
# Inventory skew strength (γ): price adjustment per unit inventory
GAMMA=0.5

# Base order size in tokens (minimum 5)
ORDER_SIZE=5

# Order size decay rate (η): reduces size exponentially with inventory
# size = ORDER_SIZE × exp(-η × |inventory|)
ORDER_SIZE_ETA=0.05



# =============================================================================
# OPERATIONAL
# =============================================================================
REFRESH_INTERVAL=1.0
LOG_LEVEL=INFO
